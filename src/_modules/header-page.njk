{% macro headerPage(title, imageSrc) %}
<section id="paralax" class="section-paralax section-top-page">
    <div class="section-paralax-c">
        <div class="paralax-background">
            <div class="image-container">
                <img src="/images/{{imageSrc}}" data-src="/images/{{imageSrc}}" alt="" width="1920" height="800" class="image queue-loading as-background"
                    style="display: none;">
            </div>
        </div>
        <div class="paralax-content">
            <div class="center-v-c">
                <div class="center-v">
                    <div class="titre">
                        <h2>{{title | i18n(title)}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endmacro %}