<head>
  {% if production == false %}
  <meta name="robots" content="noindex">
  {% endif %}

  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>{{pageName | default('Health Factory')}}</title>

  <meta property="og:url" content="http://healthfactory.io{{path}}" />
  <meta property="og:type" content="article" />
  <meta property="og:title" content="{{shareTitle | i18n('siteName')}}" />
  <meta property="og:site_name" content="{{config.siteName}}" />
  <meta property="og:description" content="{{shareDescription | i18n('siteDescription')}}" />
  <meta property="og:image" content="http://healthfactory.io/img/health-factory.jpg" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:description" content="{{shareDescription | i18n('siteDescription')}}" />
  <meta name="twitter:title" content="{{shareTitle | i18n('siteName')}}" />
  <meta name="twitter:image" content="http://healthfactory.io/img/health-factory.jpg" />

  <meta name="description" content="{{shareTitle | i18n('siteDescription')}}" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="apple-touch-icon" href="/health-factory.png">
  <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="{{baseUrl}}styles/main.css" /> 
  
  {% block stylesheets %}
  {% endblock %}

</head>

<body class="body_{{class}}" data-page="{{class}}">
  <div class="page-container">

    <!--[if lt IE 9]>
    <p class="browsehappy">
      You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.
    </p>
    <![endif]-->

    {% block content %}{% endblock %}

    <footer>
        <div class="center_page">
            <div class="logo"></div>
            <nav class="nav-footer">
                <ul>
                    <li>Mentions légales</li>
                    <li>Tous droits réservés</li>
                    <li>Crédits</li>
                </ul>
            </nav>
            <div class="clearfix"></div>
        </div>
    </footer>

  </div>

  <script src="{{baseUrl}}scripts/main.js"></script> 
  {% block scripts %}{% endblock %}


