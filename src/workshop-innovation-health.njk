        <div class="center_page">
            <div class="liste_articles">
                {{ article('Diabète et Hypercholestérolémie', 'workshop-sanofi', 'visuel.jpg', null, null, null, 'center') }}
                {{ article('Préparation au Hacking Health Camp', 'workshop-hhc', 'visuel.jpg', null, null, null, 'center') }}
                {{ article('Autonomie des patients diabétiques', 'workshop-sanofi2', 'visuel.jpg', null, null, null, 'center') }}
