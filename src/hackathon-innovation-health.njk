{% set class = 'page' %} 
{% extends '_layouts/base.njk' %} 
{% block content %} 

<div id="main" class="page-layout" data-page="page">

    {% include '_modules/header-menu.njk' %}

    {% from '_modules/header-page.njk' import headerPage %}
    {{ headerPage('HACKATHONS', 'paralaxe_2.jpg') }}

    {% from '_modules/page.njk' import page %}
    <section id="pages" class="section section_{{color | default('grey')}}">
        <div class="center_page">
            {{ page(null, null, 'hackathon-description', 'organiser mon hackathon', 'mailto:hello@healthfactory.io') }}
            <div class="clearfix"></div>
        </div>
    </section>

    {% from '_modules/article.njk' import article %} 
    <section id="articles" class="section">
        <div class="center_page">
            <div class="liste_articles">
                {{ article('Hackathon Pierre Fabre', 'hackathon-pf', 'hackathon-pierre-fabre.jpg', null, null, null, 'center') }}
                {{ article('Hacking Health Camp', 'hackathon-hhc', 'visuel.jpg', null, null, null, 'center') }}
                {{ article('Hacking Health', 'hackathon-hh', 'visuel.jpg', null, null, null, 'center') }}
            </div>
            <div class="clearfix"></div>
        </div>
    </section>

</div>
{% endblock %}